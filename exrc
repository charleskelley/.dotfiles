"####################### Vi Compatible (~/.exrc) #######################

" automatically indent new lines
set autoindent

" automatically write files when changing when multiple files open
set autowrite

" turnoff error bells to avoid constant beeps
set noerrorbells

" line numbers
set number
set relativenumber

" turn col and row position on in bottom right
set ruler " see ruf for formatting

" show command and insert mode
set showmode

" make tab two spaces
set tabstop=2

" for shifting lines and blocks
set shiftwidth=2

